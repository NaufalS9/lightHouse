<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="800"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nl.saxion.re.sponsorrun.controllers.CreateTournamentController">

    <VBox alignment="CENTER" layoutX="100" layoutY="50" prefWidth="600" spacing="20">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Lighthouse" />
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Create tournament" />

        <VBox spacing="10">
            <TextField fx:id="tournamentNameField" promptText="Tournament name" />
            <HBox spacing="10">
                <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="295.0" promptText="Select Date" />
                <TextField fx:id="venueField" prefHeight="25.0" prefWidth="295.0" promptText="Venue" />
            </HBox>
            <ComboBox fx:id="sportTypeBox" prefHeight="25.0" prefWidth="600.0" promptText="Sport type" />
            <ComboBox fx:id="matchFormatBox" prefHeight="25.0" prefWidth="601.0" promptText="Match format" />
        </VBox>

        <HBox spacing="20">
            <Button onAction="#onBackButton" prefWidth="100" text="Back" />
            <Button onAction="#onSubmitButton" prefWidth="100" text="Submit" />
        </HBox>
    </VBox>
</AnchorPane>
