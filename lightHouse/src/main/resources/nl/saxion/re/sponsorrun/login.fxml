<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="800.0" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-border-color: #cccccc; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.saxion.re.sponsorrun.controllers.LoginController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Lighthouse" />
    <VBox alignment="CENTER" fillWidth="false" spacing="10.0">
        <TextField fx:id="usernameField" prefHeight="28.0" prefWidth="200.0" promptText="Username" style="-fx-pref-width: 250; -fx-padding: 5;" />
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 250; -fx-padding: 5;" />
        <Label fx:id="errorLabel" style="-fx-font-size: 12px; -fx-font-style: italic;" textFill="red" />
    </VBox>

    <Button fx:id="loginButton" onAction="#onLogin" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" text="Login" />

</VBox>
