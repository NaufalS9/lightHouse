<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.saxion.re.sponsorrun.controllers.CreateTeamsController">

    <VBox alignment="CENTER" layoutX="100" layoutY="50" prefWidth="600" spacing="20">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Lighthouse" />
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Team registration" />

        <VBox spacing="10">
            <TextField fx:id="schoolNameField" promptText="Name of school" />
            <TextField fx:id="teamNameField" promptText="Team name" />

            <HBox spacing="10">
                <TextField fx:id="contactPersonField" prefHeight="25.0" prefWidth="292.0" promptText="Contact person" />
                <TextField fx:id="phoneNumberField" prefHeight="25.0" prefWidth="304.0" promptText="Phone number" />
            </HBox>

            <TextField fx:id="addressField" promptText="Address" />
        </VBox>

        <HBox spacing="20">
            <Button fx:id="backButton" onAction="#onBackButton" prefWidth="100" text="Back" />
            <Button fx:id="submitButton" onAction="#onSubmitButton" prefWidth="100" text="Submit" />
        </HBox>
    </VBox>
</AnchorPane>
