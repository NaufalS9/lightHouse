<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nl.saxion.re.sponsorrun.controllers.DashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #34495E; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Lighthouse" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: #2ECC71; -fx-text-fill: white;" text="User" />
        </HBox>
    </top>
    
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-padding: 10;">
            <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#onCreateTournament" style="-fx-background-color: #3498DB; -fx-text-fill: white;" text="Create Tournament" />
                <Button style="-fx-background-color: #3498DB; -fx-text-fill: white;" text="Options" />
            </HBox>

            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Upcoming Tournaments" />

            <VBox fx:id="tournamentListBox" spacing="10.0" />
        </VBox>
    </center>
</BorderPane>

